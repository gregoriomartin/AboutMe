@model AboutMe.Models.GameViewModel
@{
    ViewData["Title"] = "Start Game";
}

<h1>Start Game</h1>

<form asp-action="Start">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <p>
        The game is simple: You have to choose between options or introduce the result of Code Snippets.
    </p>
    <p>
        If you want to reach the maximum Score navigate through sections.
    </p>


    <div class="form-group">
        Enter your name and click start :P
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Start" class="btn btn-default" />
    </div>
</form>

