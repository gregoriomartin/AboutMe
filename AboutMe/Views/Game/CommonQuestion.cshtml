@model GameCore.GameModels.BaseQuestionViewModel
@{
    ViewData["Title"] = "Answer | Know more about me game";
}

@await Html.PartialAsync("_QuestionText")

<hr/>

<div class="row">
    <div class="col-md-10">
        <form asp-controller="Game" asp-action="AnswerCommon" method="post">
            <div class="form-group">
                <input type="text" asp-for="Answer" class="form-control" />
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Next" id="btnSubmit" class="btn-primary btn" />
            </div>
        </form>
    </div>
</div>
